@model LojaQuadrinhos.Model.Dtos.PedidoDto

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Pedido</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDoPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDoPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProdutosDto.FirstOrDefault().ProdutoID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProdutosDto.FirstOrDefault().Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProdutosDto.FirstOrDefault().PrecoUnitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProdutosDto.FirstOrDefault().PrecoTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProdutosDto.FirstOrDefault().QuantidadeDeProduto)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.PedidoProdutosDto.Count; i++)
            {

            <tr>
                <td>
                    @Html.DisplayFor(model => model.PedidoProdutosDto[i].ProdutoID)
                </td>

                <td>
                    @Html.DisplayFor(model => model.PedidoProdutosDto[i].Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PedidoProdutosDto[i].PrecoUnitario)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PedidoProdutosDto[i].PrecoTotal)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PedidoProdutosDto[i].QuantidadeDeProduto)
                </td>
                <td>
                    <button type="button" class="btn btn-success details" data-id="@Model.PedidoProdutosDto[i].ProdutoID">Detalhes<i class="glyphicon glyphicon-file"></i></button>
                </td>

            </tr>
            }

        </tbody>
    </table>
    <div class="modal" id="modal">
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Pedidos/DetalhesProduto?id=" + id, function () {
                    $("#modal").modal();
                })
            });

        })
    </script>
}
